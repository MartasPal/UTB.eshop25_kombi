@using UTB.eshop25.Domain.Entities
@model IList<User>

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create">Create</a>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Email</td>
                    <td>@Model[i].Phone</td>
                    <td>
                        <a asp-action="Delete"
                           asp-route-id="@Model[i].Id"
                           onclick="return ConfirmDelete();"
                           class="text-danger">X</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>User table is empty!</p>
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}
