@using UTB.eshop25.Domain.Entities
@model IList<Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null || Model.Count == 0)
{
    <p>No orders found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>OrderNumber</th>
                <th>Customer</th>
                <th>Address</th>
                <th>TotalPrice</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].OrderNumber</td>
                    <td>@Model[i].CustomerName</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].TotalPrice Kč</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@Model[i].Id" class="btn btn-sm btn-primary">
                            Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
